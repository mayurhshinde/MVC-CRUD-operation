@model TblEmployee
@{
    ViewData["Title"] = "AddUpdateEmployee";
}


@using (Html.BeginForm("AddUpdateEmployee", "Employee"))
{
    <div class="row">
        <div class="col-md-6">
            @if (ViewBag.Message != null)
            {
                <label style="color:green">@ViewBag.Message</label>
            }
            <div class="form-group">
                <label for="FirstName">First Name</label>
                @Html.HiddenFor(m => m.EmployeeId)
                @Html.TextBoxFor(m => m.FirstName, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class  = "text-danger" })
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                @Html.TextBoxFor(m => m.LastName, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="LastName">DOB</label>
                @*@Html.TextBoxFor(m => m.DOB, null, new { @class = "form-control", @type = "Date" })*@
                @Html.TextBox("DOB", Model.DOB.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "Date" })
                @Html.ValidationMessageFor(model => model.DOB, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="LastName">City</label>
                @Html.DropDownListFor(m => m.CityId, new SelectList(ViewBag.City, "Id", "CityName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityId, null, new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button> <a href="/Employee/Index" class="btn btn-info">Back</a>

        </div>
    </div>


}
